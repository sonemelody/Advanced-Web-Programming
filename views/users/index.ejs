<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <style>
      body {
        padding-top: 100px;
        background-color: #163c23;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h3 class="mb-3">Users</h3>

      <ul class="list-group">
        <% if(users == null || users.length == 0){ %>
          <li class="list-group-item" style="color:white;"> There is no user yet.</li>
        <% } %>
        <% users.forEach(function(user) { %>
          <li class="list-group-item">
            <a href="/users/<%= user.username %>" style="color:white;"><%= user.username %></a>
          </li>
        <% }) %>
      </ul>

    </div>
  </body>
</html>
